#include <stdio.h>
#include <stdlib.h>

int main(int argc, char *argv[])
{
    int height = atoi (argv[1]);
    char symbol = argv [2][0];

    int i;
    int j;
    int k;
    for (i = 1; i <= height; i++)
    {
     for (j = 1; j <= (height - i); j++) {

    printf(" ");
     }
for (j = 1; j <= ((2*i)-1); j++)
{
    printf("%c", symbol);
}

    printf ("\n");
    }

    for (k=0; k<=height-2; k++)
    {
        printf(" ");

}
     printf("%c\n", symbol);

for (k=0; k<=height-2; k++)
    {
        printf(" ");

    }
     printf("%c", symbol);

    return 0;
}
